<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="IoTHubDevice.Views.MainView"
             Background="Black">


      <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                  <TextBlock Name="MainClockHour" FontSize="30" Foreground="White"/>
                  <TextBlock Name="MainClockMin" Margin="20, 0, 0, 0" FontSize="30" Foreground="White"/>
                  <TextBlock Name="MainClockSec" Margin="20, 0, 0, 0" FontSize="15" Foreground="White"/>
            </StackPanel>

      </StackPanel>

</UserControl>
